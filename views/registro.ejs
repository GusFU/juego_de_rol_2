    <main>
        <form action="/register" method="POST">
            <div class="formulario">

                <legend>REGISTRO</legend>

                <div class="contenedor-campos">


                    <div class="campo">
                        <label>Nombre</label>
                        <input id="nombreRegistroS" type="text"
                            pattern="(/^([a-zA-Z]{2,}\s[a-zA-z]{1,}'?-?[a-zA-Z]{2,}\s?([a-zA-Z]{1,})?)$/)"
                            placeholder="Introduce tu Nombre y Apellidos ej. Sergio Conde Alcalde"
                            name="name1"
                            required>
                    </div>

                    <div class="campo">
                        <label>DNI</label>
                        <input id="DNIRegistroS" type="text" 
                            pattern="(/^\d{8}[TRWAGMYFPDXBNJZSQVHLCKET]$/))"
                            placeholder="Introduce tu DNI ej. 12345678A" 
                            name="dni1"
                            required>
                    </div>





                    <div class="campo">
                        <label>Teléfono</label>
                        <input id="telefoRegistroS" 
                                type="tel"
                                pattern="(/[0-9]{9}/)))"
                                placeholder="Introduce tu Número ej. 681081123"
                                name="telefono1"
                                required>
                    </div>


                    <div class="campo">
                        <label>Email</label>
                        <input id="emailRegistroS" type="email"
                                pattern="(/^[a-zA-Z0-9_\-\.~]{2,}@[a-zA-Z0-9_\-\.~]{2,}\.[a-zA-Z]{2,4}$/))"
                                placeholder="Introduce tu email" 
                                name="email1"
                                required>
                    </div>

                    <div class="campo">
                        <label>Dirección 1</label>
                        <input id="direccion1" type="text"
                            pattern="([a-zA-Z0-9_])"
                            placeholder="Introduce tu dirección"
                            name="direccion1"
                            required>
                    </div>

                    <div class="campo">
                        <label>Dirección 2</label>
                        <input id="direccion2" type="text"
                                pattern="([a-zA-Z0-9_])"
                                placeholder="Introduce tu dirección"
                                name="direccion2"
                                required>
                    </div>

                    <div class="campo">
                        <label>Dirección 3</label>
                        <input id="direccion3" type="text"
                                pattern="([a-zA-Z0-9_])"
                                placeholder="Introduce tu dirección"
                                name="direccion3"
                                required>
                    </div>

                    <div class="enviar" id="mensajeErrorS">
                        <button class="boton" type="submit" value="Enviar">Registrar</button>
                    </div>

                </div>
            </div>
        </form>

